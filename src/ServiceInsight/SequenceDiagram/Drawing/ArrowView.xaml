<UserControl x:Class="ServiceInsight.SequenceDiagram.Drawing.ArrowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ServiceInsight.SequenceDiagram.Drawing"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Border Background="IndianRed" BorderBrush="Red">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock>Arrow</TextBlock>
            <TextBlock x:Name="Title" Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
